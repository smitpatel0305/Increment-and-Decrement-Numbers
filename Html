<body>

    <div>

        <h1>Increment and Decrement</h1>
        <button class="minus"onclick="decrement()"><i class="fa-solid fa-minus"></i></button>
        <span id="count">0</span>
        <button class="plus"onclick="increment()"><i class="fa-solid fa-plus"></i></button>
        <button class="reset" onclick="reset()"> Reset </button>
        <script>
            function increment(){
                 var counth1 = document.querySelector("#count")
                 counth1.textContent = Number(counth1.textContent) + 1
                //var counth1 = prompt("Enter the Number")
            }
    
            function decrement(){
                var counth1 = document.querySelector("#count")
                counth1.textContent = Number(counth1.textContent) -1
            }
    
            function reset(){
                var counth1 = document.querySelector("#count")
                counth1.textContent = 0
            }
        </script>
    </div>

